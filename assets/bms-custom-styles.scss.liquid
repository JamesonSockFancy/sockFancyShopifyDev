/* BMS: Tooltip styles added by DB */

input.tooltip-toggle {
    display: none;
}
input.tooltip-toggle:checked + label.tooltip span {
  opacity:0.8;
  transition:all 0.3s 0.2s, transform 0.2s 0s;
}
label.tooltip{
  position:relative;
  display:inline-block;
}

label.tooltip span{
  text-transform:none;
  opacity:0;
  top:0;
  font-weight:normal;
  line-height:1.3em;
  font-size:0.8rem;
  transition:all 0.3s, transform 0.2s 0.2s;
  text-align:left;
  line-height:1.25em;
  font-size:1rem;
  transform:translateY(-50%) translateX(-50%) rotateY(-90deg);
  left:50%;
  z-index:50000;
  width:40%;
  padding:2em;
  background:white;
  color:black;
  margin-top:50vh;
  border-top: 5px solid #24cadb;
  position:fixed;
  display:block;
}

label.tooltip:before{
    opacity:0;
}
input.tooltip-toggle:checked + label.tooltip:before{
    content:'';
    position:fixed!important;
    bottom:0;
    right:0;
    background:black;
    display:block;
    width:100vw;
    height:100vh;
    margin:0;
    padding:0;
    transform:none;
    z-index: 10;
    opacity:0.8;
    transition:all 0.3s;
}
label.tooltip:after{
  content:'i';
  text-transform:lowercase;
  width:1em;
  height:1em;
  display:inline-block;
  border-radius:50%;
  background:#00bcce;
  overflow:hidden;
  padding:0;
  margin:0;
  line-height:1em;
  color:white;
  text-align:center;
  font-style:italic;
  font-family:serif;
  padding:0.05em;
  font-size:0.6rem;
  margin-left: 0.75em;
  cursor: pointer;
}

input.tooltip-toggle:checked + label.tooltip span {
    opacity:0.95;
    transition: all 0.3s 0.2s, transform 0.2s 0s;
    transform:translateY(-50%) translateX(-50%) rotateY(0deg);
}
label.tooltip span:after{
    content:'close';
    display:inline-block;
    float:right;
    margin-top:1.5em;
    color:#24cadb;
    text-decoration:underline;
    cursor:pointer;
}

@media screen and (max-width:780px){
    label.tooltip span{

        left:0;
        right:0;
        top:7em;
        margin:50vh 0 0 0;
        width:calc(100% - 4em);
        height:auto;
        bottom:auto;
    }
    input.tooltip-toggle:checked + label.tooltip span{
        transform:translateY(-75%) rotateY(0deg);
    }
}

label.tooltip br {
    line-height: 2em;
}
label.tooltip-link{
  display:inline;
  text-transform:none;
  font-size:inherit;
  font-weight:normal;
  color:#24cadb;
  text-decoration: underline;
  cursor: pointer;
}
