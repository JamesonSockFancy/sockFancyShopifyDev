.clear {
    clear: both;
}

/** SECTION 1 **/
#section1 {
    {% comment %} background: url({{ 'watermelon_socks.jpg' | file_img_url: 'master' }}) no-repeat; {% endcomment %}
    background-size: cover;
    position: relative;
    top: 0;
    left: 0;
    padding-bottom: 40px;
    text-align: center;
    height: 91vh;
    max-height: 91vh;
    background-repeat: no-repeat;
}

.section1_content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding-top: 65px;
}

.section1_header {
    position: relative;
}

#section1 h1 {
    color: #fff;
    font-size: 60px;
    line-height: 70px;
    position: relative;
}

#section1 p {
    color: #fff;
    font-size: 1.8em;
    margin-bottom: 20px;
}

.section1_links {
    margin-bottom: 25px;
}

.section1_links button, .section1_links a {
    width: 200px;
}

.section1_links .join_btn {
    color: #000;
    background-color: #fff;
    border: 2px solid #fff;
    border-radius: 2px;
    margin-right: 20px;
    font-family: 'Montserrat', sans-serif;
    padding: 13px 0;
}

.section1_links .gift_btn {
    color: #fff;
    background-color: transparent;
    border: 2px solid #fff;
    border-radius: 2px;
}

#section1 span.section1_video {
    font-size: 1em;
    color: #fff;
    display: inline-block;
    vertical-align: text-bottom;
    margin-top: 10px;
}

.section1_bottom_banner {
    position: relative;
    width: 100%;
    background: #272727;
}
.section1_bottom_banner .flex_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}

#shipping, #exchange, #satisfaction {
    display: inline-block;
}
.section1_bottom_banner span {
    color: #fff;
    line-height: 20px;
    font-size: 1em;
    /* width: 33%; */
    display: inline-block;
    text-align: center;
    font-weight: 700;
}
.section1_bottom_banner img {
    vertical-align: bottom;
    margin-right: 22px;
}
/* .free_shipping::before {
    content: url("{{ 'airplane.png' | asset_img_url: 'master' }}");
    width: 50px;
    height: 50px;
} */
/** END SECTION 1 **/

/** SECTION 2 **/
#section2 {
    padding-top: 50px;
    background: #f5f5f5;
    padding-bottom: 50px;
}

#section2 hr {
    margin: 25px 0;
}

#section2 container {
    width: 1380px;
}

.section2_top_content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    position: relative;
}

#section2 h2 {
    color: #272727;
    font-size: 1.75em;
}

.section2_left_content {
    width: 50%;
}

.section2_right_content {
    width: 29vw;
    top: 50%;
    position: absolute;
    transform: translateY(-50%);
    left: 50%;
}

a.do_this_thing, a.do_this_thing.button,
#section4 button,
#section4 a {
    background: #fff;
    color: #272727;
    box-shadow: 0 0 1px 1px rgba(150,150,150,0.3);
    margin-right: 25px;
    border-radius: 2px;
    font-family: 'Montserrat', sans-serif;
    padding: 12px 40px;
}
.header-account a {
    background: #fff;
    color: #272727 !important;
    box-shadow: 0 0 1px 1px rgba(150,150,150,0.3);
    border-radius: 2px;
    font-family: 'Montserrat', sans-serif;
    padding: 10px 20px;
}
ul.menu.right li.join-now a {
    background: #2dafd9;
    color: #fff !important;
    /* box-shadow: 0 0 1px 1px rgba(150,150,150,0.3); */
    border-radius: 2px;
    font-family: 'Montserrat', sans-serif;
    padding: 10px 20px;
    margin-right: 10px;
}
a.play_video_link {
    color: #272727;
    text-decoration: underline;
}
#section2 hr {
    color: #eee;
}

.section2_bottom_content {
    margin-top: 40px;
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
    text-align: center;
}

.section2_bottom_content img {
    height: 100px;
    width: auto;
    margin-bottom: 20px;
}

.section2_bottom_content .customSubs img {
    width: auto;
    height: auto;
    margin-bottom: 31px;
}

.section2_bottom_content div {
    width: 33%;
}

.section2_bottom_content h3 {
    font-size: 1em;
}
.section2_bottom_content p {
    line-height: 1.5em;
    margin: 0 auto;
}
.pickSubs p {
    width: 61%;
}
.customSubs p {
    width: 65%;
}
.unwrapSubs p {
    width: 70%;
}
/** END SECTION 2 **/

/** SECTION 3 **/
#section3 {
    background: url("{{ 'subscription_bg.jpg' | asset_img_url: 'master' }}") no-repeat;
    background-size: cover;
    position: relative;
    top: 0;
    left: 0;
    padding-bottom: 130px;
    padding-top: 170px;
}
#section3 h2 {
    font-size: 2.5em;
    text-align: center;
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    margin-bottom: 0;
    color: #000;
    font-family: 'Montserrat', sans-serif;
}
.section3_content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
}
.section3_content > div {
    background: #fff;
    padding: 30px;
    width: 200px;
    margin-bottom: 15px;
}
.section3_content p {
    font-size: 14px;
}
.section3_content span {
    font-size: 1.5em;
    /* font-family: 'Open Sans Condensed', sans-serif; */
    letter-spacing: 1.3px;
    font-weight: 700;
}
.section3_content img {
    position: relative;
    left: -30px;
}
.section3_content .section3_desc p {
    margin-bottom: 5px;
}
.savings {
    font-size: 1.2em;
}
.savingValue {
    font-size: 1.3em;
    font-weight: bold;
}
a.chooseSub:not(:hover), a.chooseSub.button:not(:hover) {
    color: #fff;
    background-color: #272727;
}
.section3_content hr {
    width: 15%;
    margin: 12px auto;
    color: #e4e5e6;
    background-color: #e4e5e6;
    border-color: #e4e5e6;
}
.section3_footer {
    position: absolute;
    bottom: -12%;
    left: 50%;
    transform: translateX(-50%);
}
/** END SECTION 3 **/

/** SECTION 4 **/
#section4 {
    background: url("{{ 'custom-socks.jpg'  | asset_img_url: 'master'}}") no-repeat;
    background-size: cover;
    position: relative;
    background-position: center center;
    margin-bottom: 20px;
}
#section4 .container {
    height: 796px;
}
#section4 .section4_content {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 45%;
}
#section4 h2 {
    font-size: 2.4em;
    color: #272727;
    line-height: 40px;
    margin-bottom: 15px;
}
#section4 p {
    padding-bottom: 15px;
}
#section4 h2 {
    width: 65%;
}
/** END SECTION 4 **/

/** SECTION 5 **/
#section5 ul.slides img {
    width: 100%;
}
/** END SECTION 5 **/

/** FEATURED IN section **/
.featured_flex {
    display: flex;
    justify-content: space-evenly;
}

.featured_flex div {
    padding: 15px 0;
}
/** end featured in section **/

/** FOOTER **/
.index .footer {
    {% comment %} margin-top: 10px; {% endcomment %}
}

/** MEDIA QUERIES **/
@media screen and (max-width: 768px) {
    .section2_top_content {
        justify-content: center;
    }
    .section2_left_content {
        width: auto;
    }
    .section2_right_content {
        width: auto;
        top: auto;
        left: auto;
        transform: none;
        position: relative;
        margin-left: 20px;
        margin-right: 20px;
    }
    .section2_links {
        text-align: center;
    }
    .section2_bottom_content h3 {
        font-size: 0.95em;
    }
    #section3 {
        padding-top: 20px;
        padding-bottom: 0;
    }
    #section3 h2 {
        position: relative;
        top: auto;
        left: auto;
        transform: none;
    }
    .section3_content > div {
        margin: 10px auto;
    }
    .section3_footer {
        position: relative;
        bottom: auto;
        left: auto;
        transform: none;
        text-align: center;
        padding-top: 20px;
    }
    #section4 .section4_content {
        top: 60%;
        left: 5%;
    }
    .featured_flex img {
        height: 25px;
        width: auto;
    }
}

@media screen and (max-width: 414px) {
    #section1 {
        background-position-x: 33%;
    }
    .section1_content {
        width: 100%;
        background: rgba(0,0,0,0.4);
        height: 100%;
    }
    .section1_links .join_btn {
        margin-right: 0;
        margin-bottom: 10px;
    }
    .section1_links {
        margin-bottom: 10px;
    }
    .section1_bottom_banner #shipping,
    .section1_bottom_banner #exchange,
    .section1_bottom_banner #satisfaction {
        width: 100%;
        text-align: center;
    }
    .section1_bottom_banner span {
        width: 60%;
    }
    .flex_container > div {
        margin: 10px;
    }
    .section2_top_content {
        display: block;
    }
    .section2_left_content img {
        width: 80vw;
    }
    .section2_bottom_content {
        display: block;
        flex-wrap: nowrap;
        align-content: normal;
    }
    .section2_bottom_content img {
        margin-bottom: 10px;
    }
    .section2_bottom_content > div {
        width: auto;
        margin-bottom: 25px;
    }
    #section3 {
        background-position-x: 60%;
    }
    .do_this_thing, #section4 a {
        margin-right: 0;
        margin-bottom: 10px;
    }
    #section4 .section4_content {
        position: relative;
        top: auto;
        width: auto;
        transform: none;
        left: auto;
    }
    #section4 h2 {
        width: 100%;
        font-size: 2.2em;
    }
    #section4 .container {
        height: auto;
    }
    .letsgetcustom {
        text-align: center;
    }
    .section4_outer_container {
        background: rgba(255,255,255,.5);
    }
    .featured_flex img {
        height: 14px;
    }
}

