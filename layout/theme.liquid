  {% include 'shogun-head' %}

  {% if template contains "index" %}
  <style>
    /** header bar **/
    div.header_bar {
        background: rgba(255,255,255,1);
    }

    div.header_bar::before {
        content: '';
        position: absolute;
        width: 100%;
        top: 0;
        height: 3px;
        background: linear-gradient(rgba(230,230,230,1), rgba(255,255,255,1));
    }
  </style>
  {% endif %}

  </head>

  {% if template contains "index" %}
    {% assign feature_image = true %}
