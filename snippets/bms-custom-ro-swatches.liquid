<header>
  <h3 class="option-title">{{ 'bold.recurring_orders.payment_title_html' | t }}</h3>
</header>
<input type="hidden" name="properties[group_id]" value="{{ product.selected_or_first_available_variant.metafields.bold_rp.rp_group_id }}" />
<input type="hidden" name="properties[frequency_num]" value="1" />
<input type="hidden" name="properties[frequency_type]" value="3" />
<input type="hidden" name="properties[frequency_type_text]" value="Month" />
<input type="hidden" name="properties[prepaid_length_id]" value="" />

<div class="swatch-wrapper swatch-{{ 'payment option' | handle }}" data-option="{{ option.name }}">
  {% assign no_text = 'bold.recurring_orders.payment_monthly_html' | t %}
  {% assign yes_text = 'bold.recurring_orders.payment_prepaid_html' | t %}
  {% include 'bms-swatch-element', input_name:'properties[is_prepaid]', option:'prepaid', title: no_text, value: '', input_id: 'prepaid-no', default_checked: true %}
  {% include 'bms-swatch-element', input_name:'properties[is_prepaid]', option:'prepaid', title: yes_text, value: 'on', input_id: 'prepaid-yes', toggle: true %}

  <header class="expanded-text-body">
    <h3 class="option-title">{{ 'bold.recurring_orders.subscription_duration_title_html' | t }}</h3>
  </header>

  <div class="expanded-text-body swatch-wrapper swatch-{{ 'subscription duration' | handle }}" data-option="{{ option.name }}">
    {% assign monthly_title_3 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 3 %}
    {% assign monthly_title_6 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 6 %}
    {% assign monthly_title_9 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 9 %}
    {% assign monthly_title_12 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 12 %}
    {% include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_3, value: '3', input_id: 'subscription-length-3', default_checked: true %}
    {% include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_9, value: '6', input_id: 'subscription-length-6' %}
    {% include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_6, value: '9', input_id: 'subscription-length-9' %}
    {% include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_12, value: '12', input_id: 'subscription-length-12' %}
  </div>
</div>
