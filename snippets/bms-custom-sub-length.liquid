<div class="section_wrapper expanded-text-body allow_scroll" data-order='5' data-option-name="Length" >

<header class="{% if prepaid_sub %}expanded-text-body prepaid-duration{% else %}monthly-gift-duration{% endif %}">
  <h3 class="option-title">{{ 'bold.recurring_orders.subscription_duration_title_html' | t }}</h3>
</header>

    {% if prepaid_sub %}<input type="checkbox" id="is_gift_tracker" name="is_gift_tracker" />{% endif %}
    <div data-value-count="3" class="{% if prepaid_sub %}expanded-text-body prepaid-duration{% else %}monthly-gift-duration{% endif %} swatch-wrapper swatch-{{ 'subscription duration' | handle }}" data-option="{{ option.name }}">
      {%- assign monthly_title_1 = 'bold.recurring_orders.subscription_duration_months_html.one' | t -%}
      {%- assign monthly_title_3 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 3 -%}
      {%- assign monthly_title_6 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 6 -%}
      {% comment %} {%- assign monthly_title_9 = 'bold.recurring_orders.subscription_duration_months_html' | t: count: 9 -%} {% endcomment %}
      {%- assign monthly_title_12 = 'bold.recurring_orders.subscription_duration_months_html.yearly' | t -%}

      {%- if prepaid_sub -%}
      {%- include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_1, value: '1', input_id: 'subscription-length-1-prepaid', default_checked: enable_default_checked -%}
      {%- include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_3, value: '3', input_id: 'subscription-length-3-prepaid' -%}
      {%- include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_6, value: '6', input_id: 'subscription-length-6-prepaid' -%}
      {% comment %} {%- include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_9, value: '9', input_id: 'subscription-length-9-prepaid' -%} {% endcomment %}
      {%- include 'bms-swatch-element', input_name:'properties[total_recurrences]', option:'duration', title: monthly_title_12, value: '12', input_id: 'subscription-length-12-prepaid' -%}

      {%- else -%}
      {%- include 'bms-swatch-element', input_name:'monthly_gift_recurrences', option:'monthly_gift_duration', title: monthly_title_1, value: '1', input_id: 'subscription-length-1-gift', default_checked: enable_default_checked -%}      
      {%- include 'bms-swatch-element', input_name:'monthly_gift_recurrences', option:'monthly_gift_duration', title: monthly_title_3, value: '3', input_id: 'subscription-length-3-gift' -%}
      {%- include 'bms-swatch-element', input_name:'monthly_gift_recurrences', option:'monthly_gift_duration', title: monthly_title_6, value: '6', input_id: 'subscription-length-6-gift' -%}
      {% comment %} {%- include 'bms-swatch-element', input_name:'monthly_gift_recurrences', option:'monthly_gift_duration', title: monthly_title_9, value: '9', input_id: 'subscription-length-9-gift' -%} {% endcomment %}
      {%- include 'bms-swatch-element', input_name:'monthly_gift_recurrences', option:'monthly_gift_duration', title: monthly_title_12, value: '12', input_id: 'subscription-length-12-gift' -%}
      {%- endif -%}
    </div>
      <p class="length_sub_text">All subscriptions auto-renew.  Cancel at any time.</p>


</div>